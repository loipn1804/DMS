<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dm_10dp"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/dm_150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_item"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtChangeStatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_50dp"
            android:layout_marginLeft="@dimen/dm_2dp"
            android:layout_marginRight="@dimen/dm_2dp"
            android:gravity="center"
            android:text="Change Status"
            android:textColor="@color/txt_black_33"
            android:textSize="@dimen/txt_15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/txtAssign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_50dp"
            android:layout_marginLeft="@dimen/dm_2dp"
            android:layout_marginRight="@dimen/dm_2dp"
            android:gravity="center"
            android:text="Assign"
            android:textColor="@color/txt_black_33"
            android:textSize="@dimen/txt_15sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>