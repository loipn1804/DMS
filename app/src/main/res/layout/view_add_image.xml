<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rltAdd"
        android:layout_width="@dimen/one_per_three"
        android:layout_height="@dimen/one_per_three"
        android:background="@drawable/bg_add_image_case_detail">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imvDelete"
                android:layout_width="@dimen/ac_imv_size"
                android:layout_height="@dimen/ac_imv_size"
                android:layout_alignParentRight="true"
                android:src="@drawable/add_image" />

            <TextView
                android:id="@+id/txtLabelAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5dp"
                android:text="Add image"
                android:textColor="@color/add_image_case_detail"
                android:textSize="@dimen/txt_15sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>