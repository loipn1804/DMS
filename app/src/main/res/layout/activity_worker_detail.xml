<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rltActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rltBack"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            android:background="@drawable/btn_white"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imvMenuLeft"
                android:layout_width="@dimen/ac_imv_size"
                android:layout_height="@dimen/ac_imv_size"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_left" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtNameActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Worker Detail"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_title" />

        <TextView
            android:id="@+id/txtSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:paddingLeft="@dimen/dm_10dp"
            android:paddingRight="@dimen/dm_10dp"
            android:text="Save"
            android:textColor="@color/txt_black_33"
            android:textSize="@dimen/txt_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="BARCODE" />

                <EditText
                    android:id="@+id/edtBarcode"
                    style="@style/edt_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="NAME" />

                <EditText
                    android:id="@+id/edtName"
                    style="@style/edt_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="DORMITORY" />

                <RelativeLayout
                    android:id="@+id/rltDormitory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/txtDormitory"
                        style="@style/txt_case_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/imvDormitory" />

                    <ImageView
                        android:id="@+id/imvDormitory"
                        android:layout_width="@dimen/ac_imv_size"
                        android:layout_height="@dimen/ac_imv_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dm_10dp"
                        android:layout_marginRight="@dimen/dm_10dp"
                        android:padding="@dimen/dm_2dp"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="BLOCK" />

                <RelativeLayout
                    android:id="@+id/rltBlock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/txtBlock"
                        style="@style/txt_case_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/imvBlock" />

                    <ImageView
                        android:id="@+id/imvBlock"
                        android:layout_width="@dimen/ac_imv_size"
                        android:layout_height="@dimen/ac_imv_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dm_10dp"
                        android:layout_marginRight="@dimen/dm_10dp"
                        android:padding="@dimen/dm_2dp"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="LEVEL" />

                <RelativeLayout
                    android:id="@+id/rltLevel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/txtLevel"
                        style="@style/txt_case_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/imvLevel" />

                    <ImageView
                        android:id="@+id/imvLevel"
                        android:layout_width="@dimen/ac_imv_size"
                        android:layout_height="@dimen/ac_imv_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dm_10dp"
                        android:layout_marginRight="@dimen/dm_10dp"
                        android:padding="@dimen/dm_2dp"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ROOM" />

                <RelativeLayout
                    android:id="@+id/rltRoom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/txtRoom"
                        style="@style/txt_case_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/imvRoom" />

                    <ImageView
                        android:id="@+id/imvRoom"
                        android:layout_width="@dimen/ac_imv_size"
                        android:layout_height="@dimen/ac_imv_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dm_10dp"
                        android:layout_marginRight="@dimen/dm_10dp"
                        android:padding="@dimen/dm_2dp"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="UNIT NO." />

                <EditText
                    android:id="@+id/edtUnitNo"
                    style="@style/edt_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="COMPANY" />

                <EditText
                    android:id="@+id/edtCompany"
                    style="@style/edt_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="WORK PERMIT" />

                <EditText
                    android:id="@+id/edtWorkPermit"
                    style="@style/edt_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="PASSPORT" />

                <EditText
                    android:id="@+id/edtPassport"
                    style="@style/edt_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="NATIONALITY" />

                <RelativeLayout
                    android:id="@+id/rltNationality"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/txtNationality"
                        style="@style/txt_case_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/imvNationality" />

                    <ImageView
                        android:id="@+id/imvNationality"
                        android:layout_width="@dimen/ac_imv_size"
                        android:layout_height="@dimen/ac_imv_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dm_10dp"
                        android:layout_marginRight="@dimen/dm_10dp"
                        android:padding="@dimen/dm_2dp"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="EXPIRY" />

                <RelativeLayout
                    android:id="@+id/rltExpiry"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/txtExpiry"
                        style="@style/txt_case_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/imvExpiry" />

                    <ImageView
                        android:id="@+id/imvExpiry"
                        android:layout_width="@dimen/ac_imv_size"
                        android:layout_height="@dimen/ac_imv_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dm_10dp"
                        android:layout_marginRight="@dimen/dm_10dp"
                        android:padding="@dimen/dm_2dp"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/txt_label_case_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="SEX" />

                <RelativeLayout
                    android:id="@+id/rltSex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/txtSex"
                        style="@style/txt_case_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/imvSex" />

                    <ImageView
                        android:id="@+id/imvSex"
                        android:layout_width="@dimen/ac_imv_size"
                        android:layout_height="@dimen/ac_imv_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dm_10dp"
                        android:layout_marginRight="@dimen/dm_10dp"
                        android:padding="@dimen/dm_2dp"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_2" />

            <HorizontalScrollView
                android:id="@+id/crollViewImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/lnlImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dm_10dp">

                    <RelativeLayout
                        android:layout_width="@dimen/one_per_three"
                        android:layout_height="@dimen/one_per_three">

                        <ImageView
                            android:id="@+id/imvWorker1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/add_picture_bg" />

                        <ImageView
                            android:id="@+id/imvEdit1"
                            android:layout_width="@dimen/dm_40dp"
                            android:layout_height="@dimen/dm_40dp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/dm_10dp"
                            android:src="@drawable/edit" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/one_per_three"
                        android:layout_height="@dimen/one_per_three"
                        android:layout_marginLeft="@dimen/dm_10dp">

                        <ImageView
                            android:id="@+id/imvWorker2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/add_picture_bg" />

                        <ImageView
                            android:id="@+id/imvEdit2"
                            android:layout_width="@dimen/dm_40dp"
                            android:layout_height="@dimen/dm_40dp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/dm_10dp"
                            android:src="@drawable/edit" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/one_per_three"
                        android:layout_height="@dimen/one_per_three"
                        android:layout_marginLeft="@dimen/dm_10dp">

                        <ImageView
                            android:id="@+id/imvWorker3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/add_picture_bg" />

                        <ImageView
                            android:id="@+id/imvEdit3"
                            android:layout_width="@dimen/dm_40dp"
                            android:layout_height="@dimen/dm_40dp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/dm_10dp"
                            android:src="@drawable/edit" />
                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtLogChange"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:background="@color/txt_black_96"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm_10dp"
                android:text="LOG CHANGES"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/lnlLogChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>