<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvVisitor"
            android:layout_width="@dimen/dm_100dp"
            android:layout_height="@dimen/dm_100dp"
            android:padding="@dimen/dm_10dp"
            android:src="@drawable/avatar_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="@dimen/dm_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Loi Phan"
                    android:textColor="@color/txt_black_33"
                    android:textSize="@dimen/txt_18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtIsExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_10dp"
                    android:background="@drawable/bg_green_circle"
                    android:paddingBottom="@dimen/dm_3dp"
                    android:paddingLeft="@dimen/dm_10dp"
                    android:paddingRight="@dimen/dm_10dp"
                    android:paddingTop="@dimen/dm_3dp"
                    android:singleLine="true"
                    android:text="abc"
                    android:textColor="@color/txt_black_33"
                    android:textSize="@dimen/txt_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="ENTRY TIME"
                    android:textColor="@color/txt_label"
                    android:textSize="@dimen/txt_12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtEntryTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:text="abc"
                    android:textColor="@color/txt_black_33"
                    android:textSize="@dimen/txt_12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnlExitTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="EXIT TIME"
                    android:textColor="@color/txt_label"
                    android:textSize="@dimen/txt_12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtExitTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:text="abc"
                    android:textColor="@color/txt_black_33"
                    android:textSize="@dimen/txt_12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_2dp"
                android:singleLine="true"
                android:text="PURPOSE OF VISIT"
                android:textColor="@color/txt_label"
                android:textSize="@dimen/txt_12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm_5dp"
                android:layout_marginTop="@dimen/dm_2dp"
                android:text="abc"
                android:textColor="@color/txt_black_33"
                android:textSize="@dimen/txt_12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/ac_imv_size"
            android:layout_height="@dimen/ac_imv_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dm_5dp"
            android:padding="@dimen/dm_2dp"
            android:src="@drawable/arrow_right" />
    </LinearLayout>
</LinearLayout>