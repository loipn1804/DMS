<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rltActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rltMenu"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            android:background="@drawable/btn_white">

            <ImageView
                android:id="@+id/imvMenuLeft"
                android:layout_width="@dimen/ac_imv_size"
                android:layout_height="@dimen/ac_imv_size"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_menu" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtNameActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Case"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_title" />

        <RelativeLayout
            android:id="@+id/rltNotify"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_white">

            <ImageView
                android:id="@+id/imvNotify"
                android:layout_width="@dimen/ac_imv_size"
                android:layout_height="@dimen/ac_imv_size"
                android:layout_centerInParent="true"
                android:src="@drawable/notification" />

            <TextView
                android:id="@+id/txtNotify"
                android:layout_width="@dimen/ac_imv_size"
                android:layout_height="@dimen/ac_imv_size"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dm_5dp"
                android:layout_marginTop="@dimen/dm_5dp"
                android:background="@drawable/circle_red"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltFilter"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rltNotify"
            android:background="@drawable/btn_white">

            <ImageView
                android:id="@+id/imvFilter"
                android:layout_width="@dimen/ac_imv_size"
                android:layout_height="@dimen/ac_imv_size"
                android:layout_centerInParent="true"
                android:src="@drawable/filter" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <com.dms.view.ScrollInterfacedListView
        android:id="@+id/lvData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rltActionBar"
        android:divider="@null"
        android:scrollbars="none">

    </com.dms.view.ScrollInterfacedListView>

    <ImageView
        android:id="@+id/imvAdd"
        android:layout_width="@dimen/actionbar_height"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dm_10dp"
        android:src="@drawable/add_case" />
</RelativeLayout>