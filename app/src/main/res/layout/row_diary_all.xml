<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/diary_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_10dp">

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm_20dp"
            android:background="@color/diary_divider" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dm_40dp"
            android:layout_height="match_parent">

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm_20dp"
                android:background="@color/diary_divider" />

            <View
                android:layout_width="@dimen/dm_10dp"
                android:layout_height="@dimen/dm_10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_gray" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dm_10dp"
            android:background="@drawable/bg_white_corner"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dm_10dp"
            android:paddingRight="@dimen/dm_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="#001"
                    android:textColor="@color/txt_black_33"
                    android:textSize="@dimen/txt_18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_circle"
                    android:paddingBottom="@dimen/dm_3dp"
                    android:paddingLeft="@dimen/dm_10dp"
                    android:paddingRight="@dimen/dm_10dp"
                    android:paddingTop="@dimen/dm_3dp"
                    android:singleLine="true"
                    android:text="abc"
                    android:textColor="@color/txt_black_33"
                    android:textSize="@dimen/txt_15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_3dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="ds sd asddasdsa s dsad asd sd sad asd asd sad asd asd sad sad asd sad sad a"
                android:textColor="@color/txt_black_33"
                android:textSize="@dimen/txt_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="TIME"
                    android:textColor="@color/txt_label"
                    android:textSize="@dimen/txt_12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:text="abc"
                    android:textColor="@color/txt_black_33"
                    android:textSize="@dimen/txt_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="CREATED BY"
                    android:textColor="@color/txt_label"
                    android:textSize="@dimen/txt_12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCreatedBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:text="abc"
                    android:textColor="@color/txt_black_33"
                    android:textSize="@dimen/txt_12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_10dp">

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm_20dp"
            android:background="@color/diary_divider" />
    </RelativeLayout>
</LinearLayout>