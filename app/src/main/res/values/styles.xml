<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/main_color</item>
        <item name="android:colorPrimaryDark">@color/main_color</item>
    </style>

    <style name="edt_signin" parent="AppTheme">
        <item name="android:textColor">@color/txt_black_55</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:layout_marginLeft">@dimen/dm_30dp</item>
        <item name="android:layout_marginRight">@dimen/dm_30dp</item>
        <item name="android:textColorHint">@color/txt_black_55_hint</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_edt_login</item>
    </style>

    <style name="btn_signin" parent="AppTheme">
        <item name="android:layout_marginLeft">@dimen/dm_30dp</item>
        <item name="android:layout_marginRight">@dimen/dm_30dp</item>
        <item name="android:background">@drawable/btn_signin</item>
    </style>

    <style name="btn_change_pass" parent="AppTheme">
        <item name="android:layout_marginLeft">@dimen/dm_30dp</item>
        <item name="android:layout_marginRight">@dimen/dm_30dp</item>
        <item name="android:background">@drawable/btn_change_pass</item>
    </style>

    <style name="txt_label_case_detail" parent="AppTheme">
        <item name="android:textColor">@color/txt_label</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:paddingLeft">@dimen/dm_10dp</item>
        <item name="android:paddingRight">@dimen/dm_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edt_case_detail" parent="AppTheme">
        <item name="android:textColor">@color/txt_black_33</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:paddingLeft">@dimen/dm_10dp</item>
        <item name="android:paddingRight">@dimen/dm_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="txt_case_detail" parent="AppTheme">
        <item name="android:textColor">@color/txt_black_33</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:paddingLeft">@dimen/dm_10dp</item>
        <item name="android:paddingRight">@dimen/dm_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="txt_sub_category" parent="AppTheme">
        <item name="android:textColor">@color/txt_black_55</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:paddingLeft">@dimen/dm_10dp</item>
        <item name="android:paddingRight">@dimen/dm_10dp</item>
        <item name="android:paddingTop">@dimen/dm_5dp</item>
        <item name="android:paddingBottom">@dimen/dm_5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
